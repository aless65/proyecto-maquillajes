@model IEnumerable<Maquillaje.WebUI.Models.CategoriaViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cate_Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cate_FechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cate_FechaModificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cate_Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cate_Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cate_FechaCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cate_FechaModificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cate_Estado)
            </td>
            <td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.cate_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.cate_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.cate_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
