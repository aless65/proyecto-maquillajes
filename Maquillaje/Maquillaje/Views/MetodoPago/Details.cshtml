@model IEnumerable<Maquillaje.Entities.Entities.VW_maqu_tbMetodosPago_View>

<div class="card">
    <div class="card-header">
        <h1>Detalles</h1>
    </div>
    <div class="card-body">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="form-group col-3">
                    <h5>ID</h5>
                    @Html.DisplayFor(modelItem => item.meto_Id)
                </div>

                <div class="form-group col-3">
                    <h5>Nombre</h5>
                    @Html.DisplayFor(modelItem => item.meto_Nombre)
                </div>
            </div>
            <div class="form-group col-3 mt-3">
                <button type="button" id="btnEditar" class="btn btn-warning" onclick="AbrirModalEdit('@item.meto_Id,@item.meto_Nombre')">Editar</button>
            </div>
        }
        <div style="height:20px"></div>
        <div class="card">
            <div class="card-header"><h2>Auditoria</h2></div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Accion</th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><label>Creacion</label></td>
                            <td>@Html.DisplayFor(modelItem => item.meto_UsuCreacion_Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.meto_FechaCreacion)</td>
                        </tr>
                        <tr>
                            <td>Modificacion</td>
                            <td>@Html.DisplayFor(modelItem => item.meto_UsuModificacion_Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.meto_FechaModificacion)</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-dark">Regresar</a>
</div>

@Html.Partial("_Modal_Update", new Maquillaje.WebUI.Models.MetodoPagoViewModel())

