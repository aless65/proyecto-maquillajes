@model Maquillaje.WebUI.Models.FacturaDetalleViewModel


<div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">
        @*<div class="d-flex justify-content-end mb-2">
                <a asp-action="Index">Regresar al index</a>
            </div>*@
        <div>
            <form asp-action="_CreateDetalles">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="fact_Id" class="control-label"></label>
                    <select asp-for="fact_Id" class="form-control" asp-items="ViewBag.fact_Id"></select>
                </div>
                <div class="form-group">
                    <label asp-for="prod_Id" class="control-label"></label>
                    <input asp-for="prod_Id" class="form-control" />
                    <span asp-validation-for="prod_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="factdeta_Cantidad" class="control-label"></label>
                    <input asp-for="factdeta_Cantidad" class="form-control" />
                    <span asp-validation-for="factdeta_Cantidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="factdeta_Precio" class="control-label"></label>
                    <input asp-for="factdeta_Precio" class="form-control" />
                    <span asp-validation-for="factdeta_Precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
