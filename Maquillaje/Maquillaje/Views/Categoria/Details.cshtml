@model IEnumerable<Maquillaje.WebUI.Models.CategoriaViewModel>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h1>Details</h1>
    </div>
    <div class="card-body">
        @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-6"><h5>ID</h5></div>
                        <div class=""> @Html.DisplayFor(modelItem => item.cate_Id)</div>
                    </div>

                    <div class="row">
                        <div class="col-6"><h5>Nombre de categoria</h5></div>
                        <div class="">@Html.DisplayFor(modelItem => item.cate_Nombre)</div>
                    </div>
                }
    </div>
</div>

