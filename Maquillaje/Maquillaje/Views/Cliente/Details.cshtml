@model IEnumerable<Maquillaje.Entities.Entities.VW_maqu_tbClientes_VW>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h1>Detalles</h1>
    </div>
    <div class="card-body">
        @foreach (var item in Model)
        {
        <div class="row">
            <div class="form-group col-6">
                <h5>ID</h5>
                @Html.DisplayFor(modelItem => item.clie_Id)
            </div>

            <div class="form-group col-6">
                <h5>Cliente</h5>
                @Html.DisplayFor(modelItem => item.clie_NombreCompleto)
            </div>

            <div class="form-group col-6 mt-3">
                <h5>Identidad</h5>
                @Html.DisplayFor(modelItem => item.clie_Identidad)
            </div>

            <div class="form-group col-6 mt-3">
                <h5>Sexo</h5>
                @Html.DisplayFor(modelItem => item.clie_Sexo)
            </div>

            <div class="form-group col-6 mt-3">
                <h5>Departamento</h5>
                @Html.DisplayFor(modelItem => item.depa_Nombre)
            </div>

            <div class="form-group col-6 mt-3">
                <h5>Municipio</h5>
                @Html.DisplayFor(modelItem => item.muni_Nombre)
            </div>

            <div class="form-group col-6 mt-3">
                <h5>Direccion</h5>
                @Html.DisplayFor(modelItem => item.clie_DireccionExacta)
            </div>

            <div class="form-group col-6 mt-3">
                <h5>Telefono</h5>
                @Html.DisplayFor(modelItem => item.clie_Telefono)
            </div>

            <div class="form-group col-6 mt-3">
                <h5>Correo Electronico</h5>
                @Html.DisplayFor(modelItem => item.clie_CorreoElectronico)
            </div>
        </div>
            <div class="form-group col-3 mt-3">
                <a asp-action="Update" asp-route-id="@item.clie_Id" class="btn btn-warning">Editar</a>
            </div>
        }
        <div style="height:20px"></div>
        <div class="card">
            <div class="card-header"><h2>Auditoria</h2></div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Accion</th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><label>Creacion</label></td>
                            <td>@Html.DisplayFor(modelItem => item.clie_UsuCreacion)</td>
                            <td>@Html.DisplayFor(modelItem => item.clie_FechaCreacion)</td>
                        </tr>
                        <tr>
                            <td>Modificacion</td>
                            <td>@Html.DisplayFor(modelItem => item.clie_UsuModificacion)</td>
                            <td>@Html.DisplayFor(modelItem => item.clie_FechaModificacion)</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-dark">Regresar</a>

</div>
<script>
    $(document).ready(function () {
        $('#menuMaquillaje').addClass('active');
        $('#clientesItem').addClass('active');
        $('#subMenuMaquillaje').addClass('show');
    });
</script>