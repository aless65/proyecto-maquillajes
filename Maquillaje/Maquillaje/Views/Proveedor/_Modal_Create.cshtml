@model Maquillaje.Entities.Entities.VW_maqu_tbProveedores_VW

<!-- Modal -->
<div class="modal fade" id="CrearCategorias" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <form method="post" asp-controller="Proveedor" asp-action="Create" id="formCreate">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Agregar Proveedor</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-6">
                            <label asp-for="prov_Nombre" class="control-label"></label>
                            <input asp-for="prov_Nombre" id="prov_Nombre" class="form-control" />
                            <label name="lbl_prov_Nombre_CreateError" id="lbl_prov_Nombre_CreateError" class="control-label" hidden style="color: red;">Este campo es requerido</label>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="prov_CorreoElectronico" class="control-label"></label>
                            <input asp-for="prov_CorreoElectronico" id="prov_CorreoElectronico" class="form-control" />
                            <label name="lbl_prov_CorreoElectronico_CreateError" id="lbl_prov_CorreoElectronico_CreateError" class="control-label" hidden style="color: red;">Este campo es requerido</label>
                        </div>
                        <div class="form-group col-6 mt-3">
                            <label asp-for="prov_Telefono" class="control-label"></label>
                            <input asp-for="prov_Telefono" id="prov_Telefono" class="form-control" />
                            <label name="lbl_prov_Telefono_CreateError" id="lbl_prov_Telefono_CreateError" class="control-label" hidden style="color: red;">Este campo es requerido</label>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" onclick="GuardarModalCreate()" class="btn btn-success">Crear</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $('#prov_Nombre').on('input', function () {
        var c = this.selectionStart,
            r = /[^a-z0.-9]/gi,
            v = $(this).val();
        if (r.test(v)) {
            $(this).val(v.replace(r, ''));
            c--;
        }
        this.setSelectionRange(c, c);
    });

    $('#prov_CorreoElectronico').on('input', function () {
        var c = this.selectionStart,
            r = /[^a-z@0.-9]/gi,
            v = $(this).val();
        if (r.test(v)) {
            $(this).val(v.replace(r, ''));
            c--;
        }
        this.setSelectionRange(c, c);
    });

    $('#prov_Telefono').on('input', function () {
        var c = this.selectionStart,
            r = /[^a-z-0-9]/gi,
            v = $(this).val();
        if (r.test(v)) {
            $(this).val(v.replace(r, ''));
            c--;
        }
        this.setSelectionRange(c, c);
    });

    function AbrirModalCreate() {
        $("#lbl_prov_Nombre_CreateError").attr('hidden', true);
        $("#lbl_prov_CorreoElectronico_CreateError").attr('hidden', true);
        $("#lbl_prov_Telefono_CreateError").attr('hidden', true);
        $("#CrearCategorias").appendTo('body').modal('show');
    };
</script>

<script>
    function GuardarModalCreate() {
        var prov_Nombre = $("#prov_Nombre").val();
        var prov_CorreoElectronico = $("#prov_CorreoElectronico").val();
        var prov_Telefono = $("#prov_Telefono").val();
        var x = true;
        $("#lbl_cate_NombreCreateError").attr('hidden', true);

        if (prov_Nombre == null || prov_Nombre == "") {
            x = false;
            $("#lbl_prov_Nombre_CreateError").attr('hidden', false);
        } else {
            $("#lbl_prov_Nombre_CreateError").attr('hidden', true);
        }

        if (prov_CorreoElectronico == null || prov_CorreoElectronico == "") {
            x = false;
            $("#lbl_prov_CorreoElectronico_CreateError").attr('hidden', false);
        } else {
            $("#lbl_prov_CorreoElectronico_CreateError").attr('hidden', true);
        }

        if (prov_Telefono == null || prov_Telefono == "" || prov_Telefono == "0") {
            x = false;
            $("#lbl_prov_Telefono_CreateError").attr('hidden', false);
        } else {
            $("#lbl_prov_Telefono_CreateError").attr('hidden', true);
        }

        if (x == true) {
            $("#formCreate").submit();
        } 
    }
</script>
