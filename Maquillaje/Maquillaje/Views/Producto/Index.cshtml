@model IEnumerable<Maquillaje.Entities.Entities.VW_maqu_tbProductos_VW>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header"><h2>Productos</h2></div>
    <div class="card-body">
        <p>
            <a class="btn btn-secondary" onclick="AbrirModalCreate()">Nuevo</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.prod_Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.prod_PrecioUni)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.prod_Stock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cate_Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.prov_Nombre)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.prod_Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.prod_PrecioUni)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.prod_Stock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cate_Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.prov_Nombre)
                        </td>
                        <td>
                            <button type="button" id="btnEditar" class="btn btn-warning" onclick="AbrirModalEdit('@item.prod_Id,@item.prod_Nombre,@item.prod_PrecioUni,@item.cate_Id,@item.prov_Id,@item.prod_Stock')">Editar</button> |
                            <a asp-action="Details" asp-route-id="@item.prod_Id" class="btn btn-dark">Detalles</a> |
                            <button class="btn btn-danger" id="btnEliminar" onclick="eliminar(@item.prod_Id)">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("_Modal_Create", new Maquillaje.Entities.Entities.VW_maqu_tbProductos_VW())

@Html.Partial("_Modal_Edit", new Maquillaje.Entities.Entities.VW_maqu_tbProductos_VW())