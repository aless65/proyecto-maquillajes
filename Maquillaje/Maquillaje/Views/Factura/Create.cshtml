@model Maquillaje.WebUI.Models.FacturaViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-header">
                <h2>Nueva factura</h2>

            </div>
            <div class="card-body">
                @*<div class="d-flex justify-content-end mb-2">
                        <a asp-action="Index">Regresar al index</a>
                    </div>*@
                <div>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="clie_Id" class="control-label"></label>
                                <select asp-for="clie_Id" class="form-control" asp-items="ViewBag.clie_Id"></select>
                            </div>
                            <div class="form-group mt-2">
                                <label asp-for="meto_Id" class="control-label"></label>
                                <select asp-for="meto_Id" class="form-control" asp-items="ViewBag.meto_Id"></select>
                            </div>
                            <div class="form-group mt-2">
                                <label asp-for="empe_Id" class="control-label"></label>
                                <input asp-for="empe_Id" class="form-control" />
                                <span asp-validation-for="empe_Id" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <input type="button" value="Siguiente" id="btnSiguiente" class="btn btn-info" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-8">
        @Html.Partial("_CreateDetalles", new Maquillaje.WebUI.Models.FacturaDetalleViewModel())
    </div>

    <div class="row mt-4">
        @Html.Partial("_IndexDetalles");
    </div>
</div>

<script>
    $("#prod_Id").prop("disabled", true);
    $("#factdeta_Cantidad").prop("disabled", true);
    $("#factdeta_Precio").prop("disabled", true);
    $("#btnContinuar").prop("disabled", true);
    $("#btnFinalizar").prop("disabled", true);

    $("#btnSiguiente").click(function () {
        $("#clie_Id").prop("disabled", true);
        $("#meto_Id").prop("disabled", true);
        $("#empe_Id").prop("disabled", true);
        $("#btnSiguiente").prop("disabled", true);


        $("#prod_Id").prop("disabled", false);
        $("#factdeta_Cantidad").prop("disabled", false);
        $("#factdeta_Precio").prop("disabled", false);
        $("#btnContinuar").prop("disabled", false);
        $("#btnFinalizar").prop("disabled", false);
    });
</script>


