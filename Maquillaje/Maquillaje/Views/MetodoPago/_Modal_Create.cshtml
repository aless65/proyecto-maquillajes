@model Maquillaje.WebUI.Models.MetodoPagoViewModel

<!-- Modal -->
<div class="modal fade" id="CrearMetodos" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <form method="post" asp-controller="MetodoPago" asp-action="Create" id="formCreate">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Nuevo método de pago</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="meto_Nombre" class="control-label"></label>
                                <input asp-for="meto_Nombre" class="form-control" />
                                <label name="lbl_meto_NombreCreateError" id="lbl_meto_NombreCreateError" class="control-label text-danger">Este campo es requerido</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" onclick="GuardarModalCreate()" class="btn btn-success">Crear</button>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="~/js/app/maqu/MetodosPago.js"></script>