@model IEnumerable<Maquillaje.WebUI.Models.CategoriaViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h2>Categorías</h2>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-secondary">Nuevo</a>
        </p>
        <table class="table table-bordered table-hover" id="DataTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.cate_Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cate_Nombre)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.cate_Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cate_Nombre)
                        </td>
                        <td>
                            @*<button class="btn btn-primary" onclick="AbrirModal()">Editar ConModal</button>*@
                            <a asp-action="Edit" asp-route-id="@item.cate_Id">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.cate_Id">Detalles</a> |
                            <a asp-action="Delete" asp-route-id="@item.cate_Id">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


